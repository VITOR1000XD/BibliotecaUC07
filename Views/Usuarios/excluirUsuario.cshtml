@model Usuario 

<h1>ALERTA!</h1>
<h2> tem certeza que deseja excluir o usuario @Model.Nome (@Model.Login)?</h2>
<p>A exclusão é irrevesivel</p>

<form action="excluirUsuario" method="post">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form> 